@model IEnumerable<MVCFINAL.Models.user>

@{
    ViewBag.Title = "Display";
}

<h2>Display</h2>

<link href="https://cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" rel="stylesheet" />

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@using (Html.BeginForm("DelSelect", "Home", FormMethod.Post))
{


    <input type="submit" value="Delete" class="btn btn-sm btn-danger rounded-0 " onclick="return confirm('Are you sure?')" />
    <table id="" class="table table-striped table-bordered">

        <tr>
            <th><input type="checkbox" id="checkBoxAll" name="empid" class="custom-checkbox" /></th>
            <th>Firstname</th>
            <th>Address</th>
            <th>Hobbies</th>
            <th>Gender</th>
            <th>Designation</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Dob</th>
            <th>UserImage</th>
            <th colspan="2">Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td><input type="checkbox" name="ID" class="custom-checkbox chkCheckBoxId" value="@item.ID" /></td>
                <td>@item.Firstname</td>
                <td>@item.Address</td>
                <td>@item.Hobbies</td>
                <td>@item.Gender</td>
                <td>@item.Designation</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>
                <td>@(item.Dob != null ? item.Dob.Value.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture) : "")</td>
                <td><img src="@Url.Content(item.UserImage)" height="100" width="100" /></td>
                <td>@Html.ActionLink("Edit", "Update", "Home", new { personid = item.ID }, new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Delete", "Delete", "Home", new { personid = item.ID }, new { onclick = "return confirm('Do you want to delete this record')" })</td>

            </tr>
        }

    </table>
}

@section scripts{
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {

            $('#checkBoxAll').click(function () {
                if ($(this).is(":checked")) {
                    $(".chkCheckBoxId").prop("checked", true)
                }
                else {
                    $(".chkCheckBoxId").prop("checked", false)
                }
            });
            $('#example').DataTable();
        });

    </script>
}

